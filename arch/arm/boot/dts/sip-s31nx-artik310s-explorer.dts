/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include "sip-s31nx-artik310s-trike-common.dtsi"

/ {
	model = "Samsung artik310s explorer board based on sip-s31nx";
	compatible = "samsung,artik310s-explorer", "samsung,artik310s",
		   "nexell,nxp3220";

	snd_null: snd_null@0 {
		#sound-dai-cells = <0>;
		compatible = "nexell,snd-null-codec";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0 0>;
	};
};

&sound0 {
	simple-audio-card,name = "nxp3220 Audio Card Loopback";

	simple-audio-card,dai-link@0 {
		mclk-fs = <256>;
		format = "i2s";
		frame-master = <&sndcpu0>;
		bitclock-master = <&sndcpu0>;

		sndcpu0: cpu  {
			sound-dai = <&i2s0 0>;
		};

		sndcodec0: codec {
			sound-dai = <&snd_null>;
		};
	};

	simple-audio-card,dai-link@1 {
		mclk-fs = <256>;
		format = "i2s";
		frame-master = <&sndcodec1>;
		bitclock-master = <&sndcodec1>;

		sndcpu1: cpu  {
			sound-dai = <&i2s1 0>;
		};

		sndcodec1: codec {
			sound-dai = <&snd_null>;
		};
	};
};

&gmac0 {
	status = "okay";

	phy-reset-gpios = <&alive_0 9 GPIO_ACTIVE_LOW>;
};

&gmac1 {
	status = "disabled";
};

&mmc2_clk {
	nexell,pin-strength = <NX_PIN_STR1>;
};

&mmc2_cmd {
	nexell,pin-strength = <NX_PIN_STR1>;
};

&mmc2_bus4 {
	nexell,pin-strength = <NX_PIN_STR1>;
};

&spi_2 {
	status = "disabled";
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "disabled";
};

&uart3 {
	status = "disabled";
};

&uart4 {
	status = "okay";
};

&uart5 {
	status = "okay";
};

&usb2phy {
	status = "okay";
	/delete-property/otg,vbus-gpio;
	/delete-property/ehci,vbus-gpio;
};

&i2s0 {
	frame-bit = <32>;
	sample-rate = <48000>;
	assigned-clock-rates = <12288000>;
	status = "okay";
};
